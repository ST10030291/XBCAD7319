<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".Fragments.CustomersFragment"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notificationHistoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_history"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"/>

            <SearchView
                android:id="@+id/notificationHistorySearchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@drawable/filter_btn_border"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:queryHint="Filter by customer name"/>


            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/AllFilterBtn"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/all"
                    android:textColor="@color/black"
                    android:background="@drawable/filter_button_selector"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/visibleFilterBtn"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/visible"
                    android:textColor="@color/black"
                    android:background="@drawable/filter_button_selector"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/hiddenFilterBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/hidden"
                    android:textColor="@color/black"
                    android:background="@drawable/filter_button_selector"
                    android:textAllCaps="false" />

            </LinearLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerTasks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shimmer_duration="3000"
                app:shimmer_intensity="0.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="166dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="20dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="5dp"
                                    android:orientation="vertical">

                                    <View
                                        android:layout_width="100dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/shimmer_background" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/shimmer_background" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="15dp"
                                        android:orientation="horizontal">

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_marginEnd="40dp"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/shimmer_background" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:layout_marginEnd="40dp"
                                            android:background="@drawable/shimmer_background" />
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="166dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="20dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="5dp"
                                    android:orientation="vertical">

                                    <View
                                        android:layout_width="100dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/shimmer_background" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/shimmer_background" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="15dp"
                                        android:orientation="horizontal">

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_marginEnd="40dp"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/shimmer_background" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:layout_marginEnd="40dp"
                                            android:background="@drawable/shimmer_background" />
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="166dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="8dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="5dp"
                                    android:orientation="vertical">

                                    <View
                                        android:layout_width="100dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/shimmer_background" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/shimmer_background" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="15dp"
                                        android:orientation="horizontal">

                                        <View
                                            android:layout_width="100dp"
                                            android:layout_marginEnd="40dp"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/shimmer_background" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:layout_marginEnd="40dp"
                                            android:background="@drawable/shimmer_background" />
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notificationHistoryRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="90dp"/>

        </LinearLayout>

</FrameLayout>
